<div class='container ' >

    <div class="row justify-content-start">
        <div class="col-lg-3  my-5 offset-xl-2  ">


            <h3>Izmena knjige</h3>



            <div class="my-5">
                {{#item}}
                <form action="/dorada" method="POST" enctype="multipart/form-data">
                <input type="text" hidden name="id" value={{id}}>
                    <div class="form-group">
                        <label for="slika">slika</label>
                        <input type="file" class="form-control" name="picture" >

                    </div>
                    <div class="form-group">
                        <label for="naziv">Naziv</label>
                        <input type="text" class="form-control" name="name" value={{name}}>

                    </div>
                    <div class="form-group">
                        <label for="pisac">Pisac</label>
                        <input type="text" class="form-control" name='writer' value = {{writer}}>

                    </div>
                    <div class="form-group">
                        <label for="opis">Opis</label>
                        <textarea name="words" id="" cols="32" rows="5" value={{words}}></textarea>

                    </div>
                  <div class="form-group">
                        <label for="cena">Cena</label>
                        <input type="text" class="form-control" name='price' value={{price}}>
                  </div>
                    <button type="submit" class="btn btn-primary">Sacuvaj</button>
                </form>
            </div>
            {{/item}}
        </div>
    </div>
</div>
