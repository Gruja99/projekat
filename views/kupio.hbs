<div class='container ' >

    <div class="row justify-content-start">
        <div class="col-lg-3  my-5 offset-xl-2  ">


            <div class="my-5">

                <form action="/kupiti" method="POST">
                    
                    <div class="form-group">
                        <label for="pay">Naziv</label>
                        <input type="text" class="form-control" value ={{item.name}} name="book" readonly >

                    </div>
                    <div class="form-group">
                        <label for="pay">Vrednost</label>
                        <input type="text" class="form-control" value ={{item.price}} name="pay" readonly >

                    </div>
                    
                    <div class="form-group">
                        <label for="name">Ime</label>
                        <input type="text" class="form-control" name="name">

                    </div>
                    <div class="form-group">
                        <label for="last">Prezime</label>
                        <input type="text" class="form-control" name="last">

                    </div>
                    <div class="form-group">
                        <label for="tel">Telefon</label>
                        <input type="text" class="form-control" name='tel'>

                    </div>
                      <div class="form-group">
                        <label for="send">Posiljka</label>
                        <select name="send" id="send">
                            <option value="after">Pouzecem</option>
                            <option value="before">Licno</option>
                        </select>
                    </div>
                    
                  
                    <button type="submit" class="btn btn-primary">Kupi</button>
                </form>
            </div>
        </div>
    </div>
</div>